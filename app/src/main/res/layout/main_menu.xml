<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ef0013">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="#353535"
        android:layout_centerVertical="true"
        android:id="@+id/tableRow9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButtonMainMenueStartGame"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/blue_chip"
                android:background="#00ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Game"
                android:id="@+id/textViewMainMenueStartGame"
                android:layout_alignBottom="@+id/imageButtonMainMenueStartGame"
                android:layout_toRightOf="@+id/imageButtonMainMenueStartGame"
                android:layout_alignTop="@+id/imageButtonMainMenueStartGame"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButtonMainMenueStatistics"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:src="@mipmap/green_chip"
                android:background="#00ffffff"
                android:layout_below="@+id/imageButtonMainMenueStartGame"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:id="@+id/textViewMainMenueStatistics"
                android:layout_alignBottom="@+id/imageButtonMainMenueStatistics"
                android:layout_toRightOf="@+id/imageButtonMainMenueStatistics"
                android:layout_alignTop="@+id/imageButtonMainMenueStatistics"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:singleLine="false"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButtonMainMenueSettings"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:src="@mipmap/pink_chip"
                android:background="#00ffffff"
                android:layout_below="@+id/imageButtonMainMenueStatistics"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/textViewMainMenueSettings"
                android:layout_alignBottom="@+id/imageButtonMainMenueSettings"
                android:layout_toRightOf="@+id/imageButtonMainMenueSettings"
                android:layout_alignTop="@+id/imageButtonMainMenueSettings"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:singleLine="false"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButtonMainMenueLogout"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:src="@mipmap/red_chip"
                android:background="#00ffffff"
                android:layout_below="@+id/imageButtonMainMenueSettings"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/textViewMainMenueLogout"
                android:layout_alignBottom="@+id/imageButtonMainMenueLogout"
                android:layout_toRightOf="@+id/imageButtonMainMenueLogout"
                android:layout_alignTop="@+id/imageButtonMainMenueLogout"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:singleLine="false"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
    </TableRow>
</RelativeLayout>