<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ef0013">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tableRow15"
        android:layout_centerVertical="true"
        android:background="#353535" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Name:"
                    android:id="@+id/textView18"
                    android:textSize="30dp"
                    android:textColor="#ffffff" />
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextSettingsNewName"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:editable="false"
                    android:inputType="text" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:id="@+id/buttonChangeName"
                    android:layout_gravity="right" />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change E-Mail:"
                    android:id="@+id/textView22"
                    android:textSize="30dp"
                    android:textColor="#ffffff" />
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextSettingsNewEmail"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:editable="false"
                    android:inputType="text" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:id="@+id/buttonChangeEmail"
                    android:layout_gravity="right" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:id="@+id/buttonChangePassword"
                    android:textSize="30dp"
                    android:textColor="#000000" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music off/on:"
                    android:id="@+id/textView24"
                    android:textSize="30dp"
                    android:textColor="#ffffff" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchSettingsMusicOnOff"
                    android:layout_marginLeft="10dp"
                    android:checked="true"
                    android:layout_gravity="center|left" />

            </TableRow>
        </TableLayout>
    </TableRow>
</RelativeLayout>
