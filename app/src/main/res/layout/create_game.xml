<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ef0013" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="#353535"
            android:layout_centerVertical="true"
            android:id="@+id/tableRow12" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Ok"
                    android:id="@+id/buttonCreateGameOK"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableRow8" >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Lobbyname"
                        android:id="@+id/textView10"
                        android:textSize="28dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#ffffff" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextCreateGameLobbyname"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableRow10"
                    android:layout_below="@+id/tableRow8" >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Password"
                        android:id="@+id/textView11"
                        android:textSize="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#ffffff" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextCreateGamePassword"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:inputType="text|textPassword"
                        android:background="#ffffff"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableRow11"
                    android:layout_below="@+id/tableRow10"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Password is not required."
                        android:id="@+id/textView12"
                        android:textSize="13dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#ffffff"
                        android:layout_weight="0.73" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableRow122"
                    android:layout_below="@+id/tableRow11">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Slots:"
                        android:id="@+id/textView100"
                        android:textSize="28dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#ffffff" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextCreateGameSlots"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:background="#ffffff"
                        android:textSize="30dp"
                        android:inputType="number"/>
                </TableRow>

            </RelativeLayout>
        </TableRow>
    </RelativeLayout>
</RelativeLayout>