<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ef0013">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:background="#353535"
        android:layout_centerVertical="true"
        android:id="@+id/tableRow3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Username:"
                    android:id="@+id/textView"
                    android:textSize="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextRegisterUsername"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:inputType="text"
                    android:background="#ffffff"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow2"
                android:layout_below="@+id/tableRow" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Password: "
                    android:id="@+id/textView2"
                    android:textSize="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextRegisterPassword"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:inputType="text|textPassword"
                    android:background="#ffffff"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow13"
                android:layout_below="@+id/tableRow2">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Re-enter Password: "
                    android:id="@+id/textView4"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextRegisterReEnterPassword"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:inputType="text|textPassword"
                    android:background="#ffffff"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow4"
                android:layout_below="@+id/tableRow13">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="E-Mail: "
                    android:id="@+id/textView3"
                    android:textSize="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextRegisterEmail"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:inputType="text|textWebEmailAddress|textEmailAddress"
                    android:background="#ffffff"
                    android:textSize="30dp" />
            </TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/buttonRegisterOk"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false" />

        </RelativeLayout>
    </TableRow>
</RelativeLayout>
