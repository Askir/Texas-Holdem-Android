<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#499640">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_margin="0dp"
        android:id="@+id/TableRowTop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView"
                android:layout_marginLeft="10dp"
                android:src="#ff0000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginLeft="10dp"
                android:src="#ff0000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView3"
                android:layout_marginLeft="25dp"
                android:src="#ff0000"
                android:layout_toRightOf="@+id/imageView2" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_marginLeft="10dp"
                android:src="#ff0000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView5"
                android:layout_marginLeft="25dp"
                android:src="#ff0000"
                android:layout_toRightOf="@+id/imageView4" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_marginLeft="10dp"
                android:src="#ff0000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView7"
                android:layout_marginLeft="25dp"
                android:src="#ff0000"
                android:layout_toRightOf="@+id/imageView6" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView8"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_marginLeft="10dp"
                android:src="#ff0000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView9"
                android:layout_marginLeft="25dp"
                android:src="#ff0000"
                android:layout_toRightOf="@+id/imageView8" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView10"
                android:layout_toRightOf="@+id/imageView9"
                android:layout_marginLeft="10dp"
                android:src="#ff0000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView11"
                android:layout_marginLeft="25dp"
                android:src="#ff0000"
                android:layout_toRightOf="@+id/imageView10" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView12"
                android:layout_toRightOf="@+id/imageView11"
                android:layout_marginLeft="10dp"
                android:src="#ff0000" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TableRowMid">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView15"
                android:src="#ff0000"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imageView16" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView16"
                android:layout_marginLeft="0dp"
                android:src="#ff0000"
                android:layout_toLeftOf="@+id/imageView17"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView17"
                android:src="#ff0000"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imageView18" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView18"
                android:src="#ff0000"
                android:layout_toLeftOf="@+id/imageView19"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView19"
                android:layout_marginLeft="0dp"
                android:src="#ff0000"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pot: "
                android:id="@+id/textView13"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView19"
                android:textSize="40dp"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TableRowBot">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="110dp"
                android:id="@+id/imageView13"
                android:layout_marginLeft="0dp"
                android:src="#ff0000"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:baselineAlignBottom="false"
                android:clickable="false" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="110dp"
                android:id="@+id/imageView14"
                android:layout_marginLeft="10dp"
                android:src="#ff0000"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:layout_toRightOf="@+id/imageView13" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButtonAllIn"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/imageView13"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:background="#e0ffd500" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButtonFold"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/imageButtonAllIn"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:background="#e0ffd500" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton6"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:background="#e0ffd500"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/imageButton5" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton5"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:background="#e0ffd500"
                android:layout_toRightOf="@+id/imageView14"
                android:layout_marginLeft="30dp" />
        </RelativeLayout>
    </TableRow>
</RelativeLayout>
